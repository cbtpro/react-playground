{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "react-app",                      // 使用 CRA 内置规则
    "plugin:react/recommended",       // 推荐的 react 规则
    "plugin:@typescript-eslint/recommended",  // 推荐的 TS 规则
    "plugin:switch-case/recommended"
  ],
  "plugins": ["react", "react-hooks", "@typescript-eslint", "switch-case"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    // 可自定义规则，如关闭 prop-types 校验
    "react/prop-types": "off",
    "switch-case/no-case-curly": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
